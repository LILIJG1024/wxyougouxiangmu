.index_swiper swiper image {
    width: 100%;
}

.index_swiper swiper {
    height: 340rpx;
}

.index_cate {
    display: flex;
}

.index_cate navigator {
    flex: 1;
    padding: 20rpx;
}

.index_cate navigator image {
    width: 100%;
}

.index_floor .floor_group image {
    width: 100%;
}

.index_floor .floor_list {
    overflow: hidden;
}

.index_floor .floor_list .floor_title {
    padding: 10rpx 0;
}

.index_floor .floor_list navigator {
    float: left;
    width: 33.33%;
}

.index_floor .floor_list image {
    width: 100%;
    height: 100%;
}

.index_floor .floor_list image:nth-last-child(-n+4) {
    height: 26.4vw;
    border-left: 10rpx solid #ffffff;
}