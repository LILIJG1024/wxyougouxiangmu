/* pages/feedback/index.wxss */
page {
  background-color: #eeeeee;
}
.fb_main {
  padding: 20rpx;
}
.fb_main .fb_title {
  font-size: 36rpx;
  color: royalblue;
  font-weight: 600;
}
.fb_main .fb_tips {
  display: flex;
  flex-wrap: wrap;
}
.fb_main .fb_tips text {
  border-radius: 30%;
  color: #e1419e;
  font-weight: 500;
  width: 30%;
  padding: 10rpx;
  text-align: center;
  background-color: #fff;
  margin: 20rpx 10rpx;
}
.fb_main .fb_content {
  background-color: #fff;
  margin-top: 20rpx;
}
.fb_main .fb_content textarea {
  padding: 10rpx;
}
.fb_main .fb_content .fb_tool {
  padding-bottom: 30rpx;
  display: flex;
  flex-wrap: wrap;
}
.fb_main .fb_content .fb_tool button {
  width: 90rpx;
  height: 90rpx;
  font-size: 60rpx;
  padding: 0;
  margin: 0;
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  color: silver;
}
.fb_main .fb_content .fb_tool .up_img_item {
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.fb_main .form {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
}
.fb_main .form button {
  height: 90rpx;
  line-height: 100%;
  background-color: #ee2277;
  width: 40%;
  margin: 0 ;
  color: #fff;
}
.fb_main .form button icon {
  position: relative;
  top: 10rpx;
}
